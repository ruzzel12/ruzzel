#include <iostream>
#include <iomanip>
using namespace std;

unsigned long factorial(unsigned long);

int main(){
	for(int x = 0; x <=10; ++x)
	   cout<<setw(2)<<x<<"! ="
	       <<factorial(x) <<endl;
}

unsigned long factorial(unsigned long number){
	if(number <=1)
	    return 1;
	else
	    return number*factorial(number-1);
}
